#include <LiquidCrystal_I2C.h>
LiquidCrystal_I2C lcd(0x27,16,2); 
 
int merah1=A0;
int kuning1=A1;
int hijau1=A2;
int merah2=5;
int kuning2=6;
int hijau2=7;
int merah3=8;
int kuning3=9;
int hijau3=10;
int merah4=11;
int kuning4=12;
int hijau4=13;

void setup() {
  lcd.clear();
  lcd.backlight ();
  lcd.init();
    lcd.begin(16,2);
    lcd.setCursor(0,   0);
    lcd.print("Traffic Light");
    lcd.setCursor(0, 1);
    lcd.print("Lalu Lintas");
    delay(2000);
  lcd.clear();
lcd.setCursor(0, 0);
     lcd.print("MULAI");
    lcd.setCursor(0, 1);
    lcd.print("GO");
    delay(1500);
  lcd.clear();
  
  pinMode (13, OUTPUT);
  pinMode (merah1, OUTPUT);
  pinMode (kuning1, OUTPUT);
  pinMode (hijau1, OUTPUT);
  pinMode (5, OUTPUT);
  pinMode (6, OUTPUT);
  pinMode (7, OUTPUT);
  pinMode (8, OUTPUT);
  pinMode (9, OUTPUT);
   pinMode (10, OUTPUT);
  pinMode (11, OUTPUT);
  pinMode (12, OUTPUT);
}

void loop() {
  lcd.begin(16, 2);
  lcd.setCursor(0, 0);
    lcd.print("TIMUR HIJAU");
    

lcd.setCursor(0,   1);
    lcd.print("05 Second");
  digitalWrite(hijau1, HIGH);
  digitalWrite (merah2, HIGH);
  digitalWrite (merah3, HIGH);
  digitalWrite (merah4, HIGH);
    delay(1000);
lcd.setCursor(0,   1);
    lcd.print("04 Second");
  digitalWrite(hijau1, HIGH);
  digitalWrite (merah2, HIGH);
  digitalWrite (merah3, HIGH);
  digitalWrite (merah4, HIGH);
    delay(1000);
lcd.setCursor(0,   1);
    lcd.print("03 Second");
  digitalWrite(hijau1, HIGH);
digitalWrite (merah2, HIGH);
  digitalWrite (merah3, HIGH);
  digitalWrite (merah4, HIGH);    
    delay(1000);
     lcd.setCursor(0, 1);
    lcd.print("02 Second");
  digitalWrite(hijau1,   HIGH);
  digitalWrite (merah2, HIGH);
  digitalWrite (merah3, HIGH);
  digitalWrite (merah4, HIGH);
    delay(1000);
lcd.setCursor(0, 1);
    lcd.print("01 Second");
   digitalWrite(hijau1, HIGH);
   digitalWrite (merah2, HIGH);
  digitalWrite (merah3, HIGH);
  digitalWrite (merah4, HIGH);
    delay(1000);
lcd.clear();
digitalWrite(hijau1,   LOW);
digitalWrite (merah2, LOW);
  digitalWrite (merah3, LOW);
  digitalWrite (merah4, LOW);




lcd.setCursor(0, 0);
lcd.print("HATI-HATI");
     lcd.setCursor(0, 1);
    lcd.print("05 Second");
  digitalWrite(kuning1,   HIGH);
  digitalWrite (kuning2, HIGH);
  digitalWrite (merah3, HIGH);
  digitalWrite (merah4, HIGH);
delay(1000);
  digitalWrite(kuning1, LOW);
  digitalWrite (kuning2, LOW);
  digitalWrite (merah3, HIGH);
  digitalWrite (merah4, HIGH);
delay(500);
lcd.setCursor(0,   1);
    lcd.print("04 Second");
  
  digitalWrite(kuning1, HIGH);
  digitalWrite (kuning2, HIGH);
  digitalWrite (merah3, HIGH);
  digitalWrite (merah4, HIGH);
delay(1000);
   digitalWrite(kuning1, LOW);
   digitalWrite (kuning2, LOW);
  digitalWrite (merah3, HIGH);
  digitalWrite (merah4, HIGH);
delay(500);
lcd.setCursor(0, 1);
    lcd.print("03 Second");
  
