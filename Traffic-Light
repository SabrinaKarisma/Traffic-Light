  digitalWrite (kuning2, HIGH);
  digitalWrite (merah3, HIGH);
  digitalWrite (merah4, HIGH);
delay(1000);
  digitalWrite(kuning1, LOW);
  digitalWrite (kuning2, LOW);
  digitalWrite (merah3, HIGH);
  digitalWrite (merah4, HIGH);
delay(500);
   lcd.setCursor(0, 1);
    lcd.print("01 Second");
  digitalWrite(kuning1, HIGH);
  digitalWrite (kuning2, HIGH);
  digitalWrite (merah3, HIGH);
  digitalWrite (merah4, HIGH);
delay(1000);
  digitalWrite(kuning1, LOW);
  digitalWrite (kuning2, LOW);
  digitalWrite (merah3, HIGH);
  digitalWrite (merah4, HIGH);

  lcd.setCursor(0, 0);
    lcd.print("UTARA HIJAU");
    

lcd.setCursor(0,   1);
